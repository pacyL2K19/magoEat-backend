{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "lib": ["dom", "es2018", "esnext"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  /*"exclude": [
    "node_modules",
    "src/database/seeders"
  ]*/
}