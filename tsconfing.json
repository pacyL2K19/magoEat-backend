{
    "include" : ["/src/**/*"],
    "compilerOptions" : {
        "outDir" : "./dist",
        "target" : "es2018",
        "strict" : true,
        "esModuleInterop" : true,
        "module" : "commonjs",
        "allowJs" : true,
        "lib": ["es5", "es6", "dom"],
        "sourceMap" : true,
        "rootDir" : "/src"
    },
    "exclude" : [
        "node_modules"
    ]
}